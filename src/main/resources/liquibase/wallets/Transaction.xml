<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="c2f4384b-a050-4afa-be0c-63233252edf3" author="gabrielMenegatto">
        <createTable tableName="wlt_transactions">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="active" defaultValueBoolean="true" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <!--Base-->
            <column name="value" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="usr_payee_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="usr_payer_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="wlt_wallet_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex indexName="idx__wlt_transactions__wlt_wallet_id" tableName="wlt_transactions">
            <column name="wlt_wallet_id"/>
        </createIndex>

        <createIndex indexName="idx__wlt_transactions__usr_payer_user_id" tableName="wlt_transactions">
            <column name="usr_payer_user_id"/>
        </createIndex>

        <createIndex indexName="idx__wlt_transactions__usr_payee_user_id" tableName="wlt_transactions">
            <column name="usr_payee_user_id"/>
        </createIndex>

        <addForeignKeyConstraint  baseColumnNames="usr_payer_user_id"
                                  baseTableName="wlt_transactions"
                                  constraintName="fk__wlt_transactions__usr_payer_user_id"
                                  referencedColumnNames="id"
                                  referencedTableName="usr_users"/>

        <addForeignKeyConstraint  baseColumnNames="usr_payee_user_id"
                                  baseTableName="wlt_transactions"
                                  constraintName="fk__wlt_transactions__usr_payee_user_id"
                                  referencedColumnNames="id"
                                  referencedTableName="usr_users"/>

        <addForeignKeyConstraint  baseColumnNames="wlt_wallet_id"
                                  baseTableName="wlt_transactions"
                                  constraintName="fk__wlt_transactions__wlt_wallet_id"
                                  referencedColumnNames="id"
                                  referencedTableName="wlt_wallets"/>
    </changeSet>


</databaseChangeLog>